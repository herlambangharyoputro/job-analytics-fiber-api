# Application
APP_NAME=IndoJobMarket Fiber API
APP_ENV=development
APP_PORT=8003

# Database (MySQL Local Development)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=indojobmarket_dev

# Database Connection Pool
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=1h

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3129

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
